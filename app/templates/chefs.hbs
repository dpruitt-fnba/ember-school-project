<div class="flex-container">
  <div class="flex-item">
    <h1>Chef Tracker</h1>
    <span>{{activeChefs.length}} of our {{chefs.length}} chefs are cooking right now!</span>
    {{#each chefs as |chef|}}
      {{chef-item chef=chef}}
    {{/each}}
    <hr>
    {{input value=newChef}}
    <button {{action "addNewChef"}}>Add Chef</button>
  </div>
  <div class="flex-item">
    {{outlet}}
  </div>
</div>