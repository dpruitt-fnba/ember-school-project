<div class="form-group">
  <label>Name</label>
  {{input value=chef.name}}
</div>

<div class="form-group">
  <label>Description</label>
  {{textarea value=chef.description}}
</div>

<div class="form-group">
  <label>Name</label>
  {{input value=chef.imageUrl}}
</div>

<div class="form-group">
  <label>Restaurants</label>
  {{#x-select value=chef.restaurant.content action="selectRestaurant" as |xs|}}
    {{#each restaurants as |restaurant|}}
      {{#xs.option value=restaurant}}
        {{restaurant.name}}
      {{/xs.option}}
    {{/each}}
  {{/x-select}}
</div>

<button {{action "save"}}>Save</button>
<button {{action "fireChef" chef}}>Fire</button>
